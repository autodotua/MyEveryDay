<Window
    x:Class="MyEveryDay.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyEveryDay.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="我的每一天" ui:TitleBar.ExtendViewIntoTitleBar="True"
    Width="800" Loaded="Window_Loaded" 
    Height="450" x:Name="window"
    ui:WindowHelper.UseModernWindowStyle="True"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="4" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Text="{Binding Title,ElementName=window}" Margin="8" HorizontalAlignment="Center" Opacity="0.8" Grid.Column="2"/>
        <local:DateSelector x:Name="dateSelector" SelectedDateChanged="dateSelector_SelectedDateChanged"/>
        <local:TextArea Grid.Column="2" x:Name="textArea"  Margin="0,40,0,0"/>
    </Grid>
</Window>