<Window
    x:Class="MyEveryDay.WPF.TemplateWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyEveryDay.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    x:Name="window"
    Title="模板 - 我的每一天"
    Width="1000"
    Height="600"
    MinWidth="800"
    MinHeight="600"
    ui:TitleBar.ExtendViewIntoTitleBar="True"
    ui:WindowHelper.UseModernWindowStyle="True"
    Loaded="Window_Loaded"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="4" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Column="2"
            Margin="8"
            HorizontalAlignment="Center"
            Opacity="0.8"
            Text="{Binding Title, ElementName=window}" />
        <Grid Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="8" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="8" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="8" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                Margin="8"
                HorizontalAlignment="Center"
                FontWeight="Bold"
                Text="文章模板" />
            <TextBlock
                Grid.Row="6"
                HorizontalAlignment="Center"
                FontWeight="Bold"
                Text="日期模板" />
            <ListView
                Grid.Row="2"
                DisplayMemberPath="Name"
                ItemsSource="{Binding ArticleTemplates}"
                SelectedItem="{Binding ArticleTemplateSelectedItem}"
                SelectionChanged="ArticleTemplateListView_SelectionChanged" >
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource DefaultListViewItemStyle}">
                        <EventSetter Event="MouseRightButtonUp" Handler="ListViewItem_MouseRightButtonUp"/>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
            <Button
                Grid.Row="4"
                HorizontalAlignment="Stretch"
                Background="Transparent"
                Click="AddTemplateButton_Click"
                ToolTip="新增文章模板">
                <ui:SymbolIcon Symbol="Add" />
            </Button>
            <ListView
                Grid.Row="8"
                SelectedIndex="{Binding DateTitleSelectedIndex}"
                SelectionChanged="DateTitleListView_SelectionChanged">
                <ListViewItem>日标题模板</ListViewItem>
                <ListViewItem>月标题模板</ListViewItem>
                <ListViewItem>年标题模板</ListViewItem>
            </ListView>
        </Grid>
        <local:TextArea
            x:Name="textArea"
            Grid.Column="2"
            Margin="0,40,0,32"
            DisableAutoSave="True" />

        <ui:CommandBar
            Grid.Row="4"
            Grid.Column="2"
            Margin="-4,0,0,0"
            VerticalAlignment="Bottom">
            <ui:AppBarButton
                Icon="Share"
                Label="导出" />
        </ui:CommandBar>
    </Grid>
</Window>